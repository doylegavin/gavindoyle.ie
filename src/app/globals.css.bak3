  .netflix-card-small .netflix-card-image,
  .netflix-card-medium .netflix-card-image,
  .netflix-card-large .netflix-card-image {
    height: 120px;
  }
  
  .netflix-card-hero .netflix-card-image {
    height: 200px;
  }
  
  .netflix-modal {
    margin: 10px;
    max-height: 95vh;
  }
  
  .netflix-modal-image {
    height: 200px;
  }
  
  .netflix-modal-info {
    padding: 20px;
  }
  
  .netflix-modal-title {
    font-size: 2rem;
  }
  
  .netflix-modal-subtitle {
    font-size: 1.1rem;
  }
  
  .netflix-modal-description {
    font-size: 1rem;
  }
}

/* Netflix Grid Styles */
.netflix-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 20px;
  padding: 0 20px;
  margin: 20px 0;
}

.netflix-grid-small {
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  gap: 15px;
}

.netflix-grid-medium {
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 20px;
}

.netflix-grid-large {
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 25px;
}

/* Netflix Card Styles */
.netflix-card {
  position: relative;
  background: #141414;
  border-radius: 8px;
  overflow: hidden;
  cursor: pointer;
  transition: transform 0.3s ease, z-index 0.3s ease;
  transform-origin: center;
  z-index: 1;
}

.netflix-card:hover,
.netflix-card:focus {
  transform: scale(1.15);
  z-index: 10;
}

.netflix-card-small {
  width: 150px;
  height: 225px;
}

.netflix-card-medium {
  width: 200px;
  height: 300px;
}

.netflix-card-large {
  width: 250px;
  height: 375px;
}

.netflix-card-hero {
  width: 300px;
  height: 450px;
}

.netflix-card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.3s ease;
}

.netflix-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.8));
  padding: 20px;
  color: white;
  opacity: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  transition: opacity 0.3s ease;
}

.netflix-card:hover .netflix-overlay,
.netflix-card:focus .netflix-overlay {
  opacity: 1;
}

.netflix-card-content {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.netflix-actions {
  display: flex;
  gap: 10px;
  margin-top: 10px;
}

.netflix-btn-play {
  background: white;
  color: black;
}

.netflix-btn-play:hover {
  background: #f0f0f0;
}

.netflix-btn-info {
  background: rgba(255,255,255,0.2);
  color: white;
  border: 1px solid rgba(255,255,255,0.3);
}

.netflix-title {
  font-size: 1.2rem;
  font-weight: bold;
  margin-bottom: 5px;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
}

.netflix-subtitle {
  font-size: 1rem;
  color: #ccc;
  margin-bottom: 10px;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
}

.netflix-badge {
  background: #e50914;
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.8rem;
  font-weight: bold;
  display: inline-block;
  margin-bottom: 10px;
}

.netflix-meta {
  display: flex;
  gap: 15px;
  margin-bottom: 10px;
  font-size: 0.9rem;
  color: #ccc;
}

.netflix-rating {
  color: #46d369;
  font-weight: bold;
}

.netflix-duration {
  color: #ccc;
}

.netflix-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 5px;
  margin-bottom: 15px;
}

.netflix-tag {
  background: rgba(255,255,255,0.2);
  color: white;
  padding: 2px 6px;
  border-radius: 3px;
  font-size: 0.8rem;
}

.netflix-btn {
  background: #e50914;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 4px;
  font-size: 0.9rem;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.3s ease;
}

.netflix-btn:hover {
  background: #f40612;
  transform: translateY(-2px);
}

/* Netflix Section Styles */
.netflix-section {
  margin: 40px 0;
}

.netflix-section-title {
  font-size: 1.5rem;
  font-weight: bold;
  color: white;
  margin-bottom: 20px;
  padding: 0 20px;
}

/* Netflix Modal Styles */
.netflix-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.netflix-modal {
  background: #141414;
  border-radius: 8px;
  max-width: 800px;
  max-height: 90vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.netflix-modal-close {
  position: absolute;
  top: 20px;
  right: 20px;
  background: rgba(0,0,0,0.7);
  color: white;
  border: none;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  font-size: 1.5rem;
  cursor: pointer;
  z-index: 1001;
}

.netflix-modal-content {
  display: flex;
  flex-direction: column;
}

.netflix-modal-image {
  width: 100%;
  height: 300px;
  object-fit: cover;
}

.netflix-modal-info {
  padding: 30px;
  color: white;
}

.netflix-modal-title {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 10px;
}

.netflix-modal-subtitle {
  font-size: 1.2rem;
  color: #ccc;
  margin-bottom: 20px;
}

.netflix-modal-description {
  font-size: 1.1rem;
  line-height: 1.6;
  margin-bottom: 20px;
  color: #ddd;
}

.netflix-modal-meta {
  display: flex;
  gap: 20px;
  margin-bottom: 20px;
  font-size: 1rem;
}

.netflix-modal-rating {
  color: #46d369;
  font-weight: bold;
}

.netflix-modal-duration {
  color: #ccc;
}

.netflix-modal-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-bottom: 25px;
}

.netflix-modal-tag {
  background: rgba(255,255,255,0.2);
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.9rem;
}

.netflix-modal-actions {
  display: flex;
  gap: 15px;
}

.netflix-modal-btn {
  background: #e50914;
  color: white;
  border: none;
  padding: 12px 24px;
  border-radius: 4px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.3s ease;
}

.netflix-modal-btn:hover {
  background: #f40612;
  transform: translateY(-2px);
}

.netflix-modal-btn-play {
  background: white;
  color: black;
}

.netflix-modal-btn-play:hover {
  background: #f0f0f0;
}

/* ===== NETFLIX HERO FULL WIDTH STYLES ===== */
.netflix-page {
    min-height: 100vh;
    background: #141414;
    padding-bottom: 60px;
}

.netflix-hero {
    width: 100vw !important;
    height: 70vh;
    min-height: 500px;
    position: relative;
    overflow: hidden;
    margin-bottom: 40px;
    margin-left: calc(-50vw + 50%) !important;
    margin-right: calc(-50vw + 50%) !important;
}

.netflix-card-hero {
    width: 100% !important;
    height: 100% !important;
    border-radius: 0 !important;
    position: absolute !important;
    top: 0;
    left: 0;
}

.netflix-card-hero .netflix-card-image {
    width: 100%;
    height: 100%;
    padding-bottom: 0 !important;
}

.netflix-card-hero .netflix-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    animation: panImage 20s ease-in-out infinite alternate;
}

@keyframes panImage {
    0% {
        object-position: 0% 100%;
        transform: scale(1.1);
    }
    50% {
        object-position: 50% 50%;
        transform: scale(1.15);
    }
    100% {
        object-position: 100% 0%;
        transform: scale(1.1);
    }
}

.netflix-card-hero .netflix-overlay {
    background: linear-gradient(to right, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.6) 50%, transparent 100%) !important;
    display: flex !important;
    align-items: center !important;
    padding: 0 60px !important;
    opacity: 1 !important;
}

.netflix-card-hero .netflix-card-content {
    max-width: 600px;
    text-align: left;
}

.netflix-card-hero .netflix-title {
    font-size: 4rem !important;
    margin-bottom: 20px;
}

.netflix-card-hero .netflix-subtitle {
    font-size: 1.8rem !important;
    margin-bottom: 20px;
}

.netflix-card-hero:hover,
.netflix-card-hero:focus {
    transform: none !important;
    z-index: 1 !important;
}
