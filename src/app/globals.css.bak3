@import "tailwindcss";

:root {
  --background: #ffffff;
  --foreground: #171717;
}


 inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
}

@media (prefers-color-scheme: dark) {
  :root {
    --background: #0a0a0a;
    --foreground: #ededed;
  }
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: Arial, Helvetica, sans-serif;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Helvetica Neue', Arial, sans-serif;
  background: #000;
  color: #fff;
  overflow-x: hidden;
}

/* Loading Screen */
.loading-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  transition: opacity 0.5s ease-out;
  overflow: hidden;
}

.loading-screen.hidden {
  opacity: 0;
  pointer-events: none;
}

/* Netflix Animation Styles */
#container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #000000;
  overflow: hidden;
}

#container .netflixintro {
  display: block;
  position: relative;
  width: 300px;
  height: 300px;
  overflow: hidden;
  animation-name: zoom-in;
  animation-delay: 0.5s;
  animation-duration: 3.5s;
  animation-timing-function: ease-in;
  animation-fill-mode: forwards;
  background-size: 4000px;
  background-position: -1950px 0;
}

#container .netflixintro::before {
  content: "";
  position: absolute;
  display: block;
  background-color: #000000;
  width: 150%;
  height: 30%;
  left: -25%;
  bottom: -27%;
  border-radius: 50%;
  z-index: 5;
  transform-origin: left center;
  background-size: 4000px;
  background-position: -1950px 0;
}

/* G Letter Animation - Sequential Drawing Like Netflix N */
#container .netflixintro[data-letter="G"] {
  transform-origin: 30% center;
}

/* Base styling for all G helpers - start hidden */
#container .netflixintro[data-letter="G"] .helper-1,
#container .netflixintro[data-letter="G"] .helper-2,
#container .netflixintro[data-letter="G"] .helper-3,
#container .netflixintro[data-letter="G"] .helper-4,
#container .netflixintro[data-letter="G"] .helper-5 {
  background-color: #e40913;
  opacity: 0;
}

/* Ensure fade-to-black animation works on all helpers */
#container .netflixintro[data-letter="G"] .helper-1,
#container .netflixintro[data-letter="G"] .helper-2,
#container .netflixintro[data-letter="G"] .helper-3,
#container .netflixintro[data-letter="G"] .helper-4,
#container .netflixintro[data-letter="G"] .helper-5 {
  position: absolute;
}

/* 1. Top horizontal line of G (draws first - left to right) - NO COLOR EFFECTS */
#container .netflixintro[data-letter="G"] .helper-1 {
  width: 50%;
  height: 15%;
  left: 25%;
  top: 15%;
  transform: rotate(0deg);
  animation: drawLine 0.2s ease-in-out 0.2s forwards;
  overflow: hidden;
  /* REMOVE ALL SPECIAL EFFECTS FROM HELPER-1 */
}

#container .netflixintro[data-letter="G"] .helper-1::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0;
  animation: fade-in-black 0.5s ease-in-out 1.6s forwards;
}

/* Helper-1 has no special brush effects - fur effects are only on helper-2 */

/* 2. Left vertical line of G (draws second - top to bottom) - MAIN FOCUS FOR ALL EFFECTS */
#container .netflixintro[data-letter="G"] .helper-2 {
  width: 15%;
  height: 70%;
  left: 25%;
  top: 15%;
  transform: rotate(180deg);
  background-color: rgba(228, 9, 19, 0.5);
  animation: drawLine 0.2s ease-in-out 0.4s forwards, fading-lumieres-box 2s 1.5s forwards;
  overflow: hidden;
}

/* REMOVED: Helper-2 should NOT have black overlay - keep special effects visible
#container .netflixintro[data-letter="G"] .helper-2::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0;
  animation: fade-in-black 0.5s ease-in-out 1.6s forwards;
}
*/

#container .netflixintro[data-letter="G"] .helper-2 .effect-brush {
  animation-name: brush-moving;
  animation-duration: 2s;
  animation-fill-mode: forwards;
  animation-delay: 1.3s;
}

/* 3. Bottom horizontal line of G (draws third - left to right) */
#container .netflixintro[data-letter="G"] .helper-3 {
  width: 35%;
  height: 15%;
  left: 40%;
  top: 70%;
  transform: rotate(0deg);
  animation: drawLine 0.2s ease-in-out 0.6s forwards;
  box-shadow: 0px 0px 35px -12px rgba(0, 0, 0, 0.4);
  overflow: hidden;
}

#container .netflixintro[data-letter="G"] .helper-3::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0;
  animation: fade-in-black 0.5s ease-in-out 1.6s forwards;
}

/* 4. Right vertical line (draws fourth - bottom to top) */
#container .netflixintro[data-letter="G"] .helper-5 {
  width: 15%;
  height: 35%;
  left: 60%;
  top: 50%;
  transform: rotate(0deg);
  animation: drawLine 0.2s ease-in-out 0.8s forwards;
  overflow: hidden;
}

#container .netflixintro[data-letter="G"] .helper-5::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0;
  animation: fade-in-black 0.5s ease-in-out 1.6s forwards;
}

/* 5. Middle horizontal line of G (draws last - right to left) */
#container .netflixintro[data-letter="G"] .helper-4 {
  width: 25%;
  height: 7.5%;
  left: 50%;
  top: 50%;
  transform: rotate(0deg);
  animation: drawLine 0.2s ease-in-out 1.0s forwards;
  overflow: hidden;
}

#container .netflixintro[data-letter="G"] .helper-4::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  opacity: 0;
  animation: fade-in-black 0.5s ease-in-out 1.6s forwards;
}

/* Animation to draw each line */
@keyframes drawLine {
  from {
      opacity: 0;
      transform: scaleX(0);
  }
  to {
      opacity: 1;
      transform: scaleX(1);
  }
}

/* Helper Effects */
